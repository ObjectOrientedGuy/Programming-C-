#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double x[20];//масив координат х
    double y[20];//масив координат у
    double max=0,i1,i2;
    for(int i = 0;i<20;i++){//заповнюємо масив
        cout<<"Enter coordinates of points A"<<i<<endl;
        cout<<"x = ";
        cin>>x[i];//вводимо координату х
        cout<<"y = ";
        cin>>y[i];//вводимо кооринату у
    }
    for (int i = 0;i<20;i++){
        for (int n = i+1;n<20;n++){//шукаємо найбільшу відстань
            if (max<sqrt(pow(x[i]-x[n],2)+pow(y[i]-y[n],2))){//якщо занходимо таку
                max=sqrt(pow(x[i]-x[n],2)+pow(y[i]-y[n],2));//то присвоюємо це значення змінній max
                i1=i;//і записуємо номери цих точок
                i2=n;
            }
        }
    }

